<Window x:Class="Rozbudowana_biblioteka.Wins.DodajPracownika"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rozbudowana_biblioteka.Wins"
        mc:Ignorable="d"
        Title="DodajPracownika" Height="400" Width="500">
    <Grid Background="GreenYellow">
        <UniformGrid Columns="4" Height="310"  VerticalAlignment="Top" Margin="10">
            <Label Margin="10">Login:</Label>
            <TextBox x:Name="LoginCRTACCTxtBox" Margin="10"></TextBox>
            <Label Margin="10">Haslo:</Label>
            <TextBox x:Name="HasloCRTACCTxtBox" Margin="10"></TextBox>
            <Label Margin="10">Imie:</Label>
            <TextBox x:Name="ImieCRTACCTxtBox" Margin="10"></TextBox>
            <Label Margin="10">Nazwisko:</Label>
            <TextBox x:Name="NazwiskoCRTACCTxtBox" Margin="10"></TextBox>
            <Label Margin="10">DataUr(tylko rok):</Label>
            <TextBox x:Name="DataUrCRTACCTxtBox" Margin="10"></TextBox>
            <Label Margin="10">Plec(K/M):</Label>
            <TextBox x:Name="PlecCRTACCTxtBox" Margin="10"></TextBox>
            <Label Margin="10">Ulica:</Label>
            <TextBox x:Name="UlicaCRTACCTxtBox" Margin="10"></TextBox>
            <Label Margin="10">Nr Ulicy:</Label>
            <TextBox x:Name="NrUlicyCRTACCTxtBox" Margin="10"></TextBox>
            <Label Margin="10">NrMieszkania:</Label>
            <TextBox x:Name="NrMieszkaniaCRTACCTxtBox" Margin="10"></TextBox>
            <Label Margin="10">Kod pocztowy:</Label>
            <TextBox x:Name="KodPocztowyCRTACCTxtBox" Margin="10"></TextBox>
            <Label Margin="10">Miasto:</Label>
            <TextBox x:Name="MiastoCRTACCTxtBox" Margin="10"></TextBox>
            <Label Margin="10">Nr telefonu:</Label>
            <TextBox x:Name="NrTLFCRTACCTxtBox" Margin="10"></TextBox>
            <Label Margin="10">Email:</Label>
            <TextBox x:Name="EmailCRTACCTxtBox" Margin="10"></TextBox>
            <Label Margin="10">Stanowisko:</Label>
            <ComboBox x:Name="StanowiskoCmbBox" Margin="10">
                <ComboBoxItem>Pracownik</ComboBoxItem>
                <ComboBoxItem>Administrator</ComboBoxItem>
            </ComboBox>
        </UniformGrid>
        <Button x:Name="ConfirmCRTACCBTN" Width="120" Height="35" VerticalAlignment="Bottom" Background="YellowGreen" Margin="10" Click="ConfirmCRTACCBTN_Click" >Confirm</Button>
    </Grid>
</Window>
