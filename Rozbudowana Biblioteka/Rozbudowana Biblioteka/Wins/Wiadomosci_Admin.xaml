<Window x:Class="Rozbudowana_biblioteka.Wins.Wiadomosci_Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rozbudowana_biblioteka.Wins"
        mc:Ignorable="d"
        Title="Wiadomosci_Admin" Height="600" Width="800">
    <Grid Background="Blue">
        <Grid.RowDefinitions>
            <RowDefinition Height="370"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="AdminWiadomosciDatagrid"  ColumnWidth="*" CanUserDeleteRows="True" Margin="10">
           
        </DataGrid>

        

        <StackPanel Orientation="Horizontal" Grid.Row="1" Height="100" Width="350" Margin="30" VerticalAlignment="Top" >
            <Button x:Name="WyswietlWszystkieWiadomosciBTN" Width="150" Background="DarkGreen" Margin="10" Click="WyswietlWszystkieWiadomosciBTN_Click">Odswiez liste  </Button>
            <Button x:Name="WyswietlNieprzeczytaneWiadomosciBTN" Width="150" Background="DarkRed" Margin="10" Click="WyswietlNieprzeczytaneWiadomosciBTN_Click">Wroc do panelu</Button>
            
        </StackPanel>
        
    </Grid>
</Window>
