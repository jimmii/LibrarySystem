<Window x:Class="Rozbudowana_biblioteka.Wins.StatusCzytelnika"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rozbudowana_biblioteka.Wins"
        mc:Ignorable="d"
        Title="StatusCzytelnika" Height="200" Width="300">
    <Grid Background="Red">
        <UniformGrid Columns="2" Height="90"  VerticalAlignment="Top" Margin="10">
            <Label Margin="10">Imie:</Label>
            <TextBox x:Name="ImieStatusTxtBox" Margin="10"></TextBox>
            <Label Margin="10">Nazwisko:</Label>
            <TextBox x:Name="NazwiskoStatusTxtBox" Margin="10"></TextBox>

        </UniformGrid>
        <Button x:Name="ConfirmStatusBTN" Width="120" Height="35" VerticalAlignment="Bottom" Background="YellowGreen" Margin="10" Click="ConfirmStatusBTN_Click" >Confirm</Button>
    </Grid>
</Window>
